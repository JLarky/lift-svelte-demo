---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About">
  <main>
    <h1>About Us</h1>
    <p>Welcome to our About page. This demonstrates Astro's routing capabilities.</p>
    <a href="/" class="back-link">‚Üê Back to Home</a>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .back-link {
    color: rgb(var(--accent-light));
    text-decoration: none;
    display: inline-block;
    margin-top: 2rem;
  }
  .back-link:hover {
    text-decoration: underline;
  }
</style>